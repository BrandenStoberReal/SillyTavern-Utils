{
  "name": "sillytavern-utils",
  "version": "1.3.0",
  "description": "A collection of TypeScript utilities and type definitions for SillyTavern.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/BrandenStoberReal/SillyTavern-Utils.git"
  },
  "files": [
    "dist",
    "src/styles/*.css"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "require": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/index.js",
      "require": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    },
    "./styles": {
      "import": "./dist/styles/index.js",
      "require": "./dist/styles/index.js",
      "types": "./dist/styles/index.d.ts"
    }
  },
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build:tsc && npm run build:copy",
    "build:tsc": "tsc",
    "build:copy": "cp -r src/styles/*.css dist/styles/ 2>/dev/null || xcopy /s /e /y /i src\\styles\\*.css dist\\styles\\ 2>nul || echo >nul",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.3.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@types/toastr": "^2.1.43",
    "toastr": "^2.1.4"
  }
}
